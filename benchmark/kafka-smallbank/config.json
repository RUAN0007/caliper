{
   "blockchain": {
        "type": "fabric",
        "config": "benchmark/kafka-smallbank/fabric.json"
  },
  "command" : {
    "start": "COMPOSE_PROJECT_NAME=net docker-compose -f network/fabric/kafka/docker-compose.yaml up -d;sleep 10",
    "end" : "COMPOSE_PROJECT_NAME=net docker-compose -f network/fabric/kafka/docker-compose.yaml down; sleep 10; docker rm $(docker ps -aq)"
  },
  "test": {
    "name": "smallbank",
    "description" : "This is smallbank benchmark for caliper on kafka order service",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [
      {
        "label" : "smallOperations",
        "txNumber" : [4000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 200}}],
        "arguments": {"accounts":400, "txnPerBatch":10},
        "callback" : "benchmark/kafka-smallbank/smallbankOperations.js"
      },
      {
        "label" : "query",
        "txNumber" : [2000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 200}}],
        "callback" : "benchmark/kafka-smallbank/query.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
