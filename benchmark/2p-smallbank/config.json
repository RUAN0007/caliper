{
   "blockchain": {
        "type": "fabric",
        "config": "benchmark/2p-smallbank/fabric.json"
  },
  "command" : {
    "start": "python network/fabric/1P2Org2Order4KFK/script/network.py up; sleep 5",
    "end" : "python network/fabric/1P2Org2Order4KFK/script/network.py down;sleep 5"
  },
  "test": {
    "name": "smallbank",
    "description" : "This is smallbank benchmark for caliper on kafka order service",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [
      {
        "label" : "smallOperations",
        "txNumber" : [1000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 50}}],
        "arguments": {"accounts":400, "txnPerBatch":10},
        "callback" : "benchmark/kafka-smallbank/smallbankOperations.js"
      },
      {
        "label" : "query",
        "txNumber" : [2000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 200}}],
        "callback" : "benchmark/kafka-smallbank/query.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
