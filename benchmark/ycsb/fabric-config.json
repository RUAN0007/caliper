{
   "blockchain": {
        "type": "fabric"
  },
  "command" : {
    "start": "sleep 5",
    "end" : "sleep 5"
  },
  "contracts": [{"id": "ycsb", "path": "contract/fabric/ycsb", "language":"golang", "version": "v0"}],
  "test": {
    "name": "ycsb",
    "description" : "This is ycsb benchmark for caliper",
    "clients": {
      "type": "local",
      "number": 2
    },
    "rounds": [
      {
        "label" : "insert",
        "txNumber" : [10000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 200}}],
        "arguments": {"txnPerBatch":50, "fieldCount": 10, "fieldLength": 15, "orderedInserts": 1},
        "callback" : "benchmark/ycsb/insert.js"
      }
      , 
      { "label" : "txn",
        "txNumber" : [5000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 100}}],
        "arguments": {"txnPerBatch":10, "distribution": "zipf", "zipf_s": 0.2, "recordCount": 1000, "readRatio": 0.0, "updateRatio": 0.0, "insertRatio": 0.0, "deleteRatio": 0.0, "modifyRatio": 1.0},
        "callback" : "benchmark/ycsb/txn.js"
      }
    ]
  }
}
