{
   "blockchain": {
        "type": "quorum"
  },
  "command" : {
    "start": "sleep 1",
    "end" : "sleep 5"
  },
  "contracts": [{"name": "ycsb", "path": "src/contract/quorum/ycsb.sol"}],
  "test": {
    "name": "ycsb",
    "description" : "This is ycsb benchmark for caliper",
    "clients": {
      "type": "local",
      "number": 64
    },
    "rounds": [
      {
        "label" : "insert",
        "txNumber" : [128000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 100}}],
        "arguments": {"txnPerBatch":10, "fieldCount": 10, "fieldLength": 100},
        "callback" : "benchmark/ycsb/insert.js"
      }
      , 
      { "label" : "rw-eq",
        "txDuration" : [150],
        "rateControl" : [{"type": "equil-rate", "opts": {"initial_tps" : 80, "tps_incr": 0.1, "backlog": 700}}],
        "arguments": {"txnPerBatch":1, "distribution": "zipf", "zipf_s": 0.99, "recordCount": 128000, "readRatio": 0.2, "updateRatio": 0.8, "insertRatio": 0.0, "deleteRatio": 0.0, "modifyRatio": 0.0},
        "callback" : "benchmark/ycsb/txn.js"
      }
      , 
      { "label" : "rw140",
        "txDuration" : [150],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 140}}],
        "arguments": {"txnPerBatch":1, "distribution": "zipf", "zipf_s": 0.99, "recordCount": 128000, "readRatio": 0.2, "updateRatio": 0.8, "insertRatio": 0.0, "deleteRatio": 0.0, "modifyRatio": 0.0},
        "callback" : "benchmark/ycsb/txn.js"
      }
      , 
      { "label" : "rw150",
        "txDuration" : [150],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 150}}],
        "arguments": {"txnPerBatch":1, "distribution": "zipf", "zipf_s": 0.99, "recordCount": 128000, "readRatio": 0.2, "updateRatio": 0.8, "insertRatio": 0.0, "deleteRatio": 0.0, "modifyRatio": 0.0},
        "callback" : "benchmark/ycsb/txn.js"
      }
      , 
      { "label" : "rw160",
        "txDuration" : [150],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 160}}],
        "arguments": {"txnPerBatch":1, "distribution": "zipf", "zipf_s": 0.99, "recordCount": 128000, "readRatio": 0.2, "updateRatio": 0.8, "insertRatio": 0.0, "deleteRatio": 0.0, "modifyRatio": 0.0},
        "callback" : "benchmark/ycsb/txn.js"
      }
    ]
  }
}
